# Example LangSmith Configuration
# Copy this to your .env file to enable LangSmith tracing

# Enable LangSmith tracing
LANGSMITH_TRACING=true

# LangSmith endpoint (default: https://api.smith.langchain.com)
LANGSMITH_ENDPOINT="https://api.smith.langchain.com"

# LangSmith API key (get from https://smith.langchain.com)
LANGSMITH_API_KEY="lsv2_pt_your_api_key_here"

# LangSmith project name (organizes runs in the UI)
LANGSMITH_PROJECT="bates_number_demo"

# Other configuration options...
LLM_PROVIDER=ollama
OLLAMA_MODEL=llama3.2:3b
OLLAMA_HOST=http://localhost:11434

# Vector search settings
ENABLE_VECTOR_SEARCH=true
CHUNK_SIZE=750
CHUNK_OVERLAP=150

# PostgreSQL settings (optional)
ENABLE_POSTGRES_STORAGE=false
POSTGRES_CONNECTION=postgresql://user:password@localhost:5432/bates_documents